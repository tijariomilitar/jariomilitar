<html>
	<head>
        <% include ./../partials/head %>
	</head>
	<header>
		<img class="width-150 opacity-hover-08 pointer" onclick="window.location.href='/'" src="/images/favicon/favicon-black.png">
	</header>
	<body>
		<section>
			<div class="container">
				<div class="box one container ground margin-top-10 shadow">

					<div class="box b2 container center">
						<% if(!product.images.length){ %>
						<div data-js="product-carousel" class="box one ground margin-top-15 padding-10 center display-none display-block">
		                    <img class="catalog-image" src="/images/product/no-product.png">
		                </div>
						<% } else { %>
						<div data-js="product-carousel" class="box one ground margin-top-15 padding-10 center display-none display-block">
		                    <img class="catalog-image" src="<%= product.images[0].url %>">
		                </div>
						<% for(i in product.images){ %>
							<% if(i > 0){ %>
							<div data-js="product-carousel" class="box one ground margin-top-15 padding-10 center display-none">
			                    <img class="catalog-image" src="<%= product.images[i].url %>">
			                </div>
							<% } %>
						<% } %>
						<div id="product-carousel-navigation" class="box one ground container padding-10 center">
		                    <div class="mobile-box b5"></div>
		                    <button data-js="product-carousel-prev" name="carousel-prev" class="mobile-box b5 noborder"><img class="height-40 icon pointer" src="/images/icon/prev.png"></button>
		                    <div class="mobile-box b5"></div>
		                    <button data-js="product-carousel-next" name="carousel-next" class="mobile-box b5 noborder"><img class="height-40 icon pointer" src="/images/icon/next.png"></button>
		                </div>
						<% } %>
					</div>

					<div class="box b2 container margin-bottom-15">
						<div class="box b1 avant-garde em40 center padding-10 bold"><%= product.name %> - <%= product.color %></div>
						<div class="box b1 avant-garde em25 italic center padding-10 bold" style="color:#467846;">R$<%= product.price %></div>
						<div class="box b1 container padding-10 bold">
							<div class="mobile-box b3 container center">
								<div class="box b1 avant-garde em10 italic">30 Dias</div>
								<div class="box b1 avant-garde em18 italic" style="color:#467846;">$<%= (product.price * 1.06).toFixed(2) %></div>
							</div>
							<div class="mobile-box b3 container border-left center">
								<div class="box b1 avant-garde em10 italic">60 Dias</div>
								<div class="box b1 avant-garde em18 italic" style="color:#467846;">$<%= (product.price * 1.09).toFixed(2) %></div>
							</div>
							<div class="mobile-box b3 container border-left center">
								<div class="box b1 avant-garde em10 italic">90 Dias</div>
								<div class="box b1 avant-garde em18 italic" style="color:#467846;">$<%= (product.price * 1.12).toFixed(2) %></div>
							</div>
						</div>

						<div class="box b1 container">
							<% if(product.products) { %>
								<% for(let i in product.products){ %>
									<div class="mobile-box b3 container ground padding-10 margin-top-5 center">
										<div class="mobile-box b1 center"><img class="image-card" style="max-height:100px" src="<%= product.products[i].image %>"></div>
										<div class="mobile-box b1 avant-garde center margin-top-10 bold"><%= product.products[i].amount %>un - <%= product.products[i].name %> | <%= product.products[i].color %></div>
									</div>
								<% } %>
							<% } %>
						</div>
					</div>
				</div>
			</div>
		</section>
		<div id="ajax-loader" class="ajax-loader">
			<div class="loader"></div>
		</div>
	</body>
	<footer>
        <% include ./../partials/footer %>
        <% include ./partial %>
        <script>
        	lib.carousel.render("product-carousel")
        </script>
	</footer>
</html>