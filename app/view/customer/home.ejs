                </div>
            </div>
            
            <div class="box b2-3 container ground border radius-5 padding-10 margin-top-10">
                <% include ./components/sale-history %>
            </div>

            <div class="box b3 container ground border radius-5 padding-10 margin-top-10">
                <% include ./components/sale-statistics %>
            </div>

            <div id="rank-list" class="box b3 container ground border padding-5 margin-top-10 radius-5 relative h-center">
                <% include ./components/rank-list %>
            </div>


            <section class="box b2-3 container min-height-400 margin-top-10 h-center">
                <div class="box a1 container padding-10 h-center" style="display:none;">
                    <% include ./../blog/components/article-filter-form %>
                </div>
                <div id="article-filter-box" class="box b1 container ground border radius-5 center" style="display:none">
                    <div class="box b1 lucida-grande bold margin-top-5 underline center">Artigos indicados para vocÃª</div>
                    <div id="article-filter-div" class="box b1 container h-center height-400 scroll-y"></div>
                    <% include ./../partials/carousel %>
                </div>
            </section>
        </section>
        <% include ./../blog/components/footer %>
        <% include ./../partials/loader %>
    </body>
    <footer>
        <% include ./../partials/footer %>

        <script src="/javascripts/scripts/blog/model/article.js"></script>
        <% include ./../blog/partial %>
        <script>
            Blog.article.controller.filter.submit.click();
        </script>
    </footer>
</html>