<html>
    <head>
        <% include ./../partials/head %>
        <style type="text/css">
            .box-article { width: 350px; height: 335px; margin-left: 0.5%; margin-right: 0.5%;}
            .box-category { width: 19%; margin-left: 0.5%; margin-right: 0.5%; }
            .b4-b2 { width: 24%; margin-left: 0.5%; margin-right: 0.5%;}
            .category-article { position: absolute; top: 182.5px; left: 10px; }

            @media (max-width: 800px) {
                .box-article { width: 350px; height: 335px; margin-left: 0.5%; margin-right: 0.5%; }
                .box-category {width: 49%; margin-left: 0.5%; margin-right: 0.5%;}
                .b4-b2 { width: 49%; margin-left: 0.5%; margin-right: 0.5%; }
            }
        </style>
    </head>
    <body>
        <% include ./components/header %>
        <section class="container">
            <div class="box b1 container ground border radius-5 padding-10 margin-top-10">
                <div class="box b6 container">
                    <% include ./components/customer-info %>
                </div>
                <div class="box b3 container">
                    <% include ./components/sale-rank %>
                </div>
                <div id="rank-benefits" class="box b2 container border padding-5 radius-5 relative" style="display: none;">
                    <% include ./components/rank-benefits %>
